---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://fuix.cl/contact",
    url: "https://fuix.cl/contact",
    name: "Contáctanos",
    description:
      "Contáctanos para cualquier consulta, comentario o soporte. ¡Estamos aquí para ayudarte!",
    isPartOf: {
      "@type": "WebSite",
      url: "https://fuix.cl",
      name: "Fuix",
      description:
        "Fuix es un emprendimiento de desarrollo de software, enfocado en la creación de soluciones digitales.",
    },
    inLanguage: "es-ES",
  }}
>
  <ContactSection />
</MainLayout>
