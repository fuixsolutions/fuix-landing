---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!-- Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes -->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://fuix.cl/contact",
    url: "https://fuix.cl/contact",
    name: "Contact Us",
    description:
      "Contact us for any questions, feedback, or support. We're here to help!",
    isPartOf: {
      "@type": "WebSite",
      url: "https://fuix.cl",
      name: "Fuix",
      description:
        "Fuix is a software development startup focused on creating digital solutions.",
    },
    inLanguage: "en-US",
  }}
>
  <ContactSection />
</MainLayout>
