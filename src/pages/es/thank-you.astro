---
// Import section components
import MainLayout from "@/layouts/MainLayout.astro";
import Btn404 from "@components/ui/buttons/Btn404.astro";
import Icon from "@components/ui/icons/Icon.astro";
import { SITE } from "@data/constants";

// Define types for translations
type TranslationKeys = "en" | "es";
type Translations = {
  [key in TranslationKeys]: {
    pageTitle: string;
    subTitle: string;
    content: string;
    btnTitle: string;
  };
};

// Define translations
const translations: Translations = {
  en: {
    pageTitle: `Thank You`,
    subTitle: "We've received your message",
    content:
      "We typically respond within 24 hours. If you need immediate assistance, please call us.",
    btnTitle: "Go Back",
  },
  es: {
    pageTitle: `Gracias`,
    subTitle: "Hemos recibido tu mensaje",
    content:
      "Normalmente respondemos en un plazo de 24 horas. Si necesitas ayuda inmediata, por favor, ll√°manos.",
    btnTitle: "Volver",
  },
};

// Retrieve current locale
const locale = Astro.currentLocale as TranslationKeys;
const { pageTitle, subTitle, content, btnTitle } = translations[locale];
---

<MainLayout title={pageTitle}>
  <section class="grid h-svh place-content-center">
    <div class="mx-auto max-w-screen-xl px-4 py-8 lg:px-6 lg:py-16">
      <div class="mx-auto max-w-screen-sm text-center">
        <div
          class="icon mx-auto text-center text-yellow-500 dark:text-yellow-400"
        >
          <Icon name="emailCheck" />
        </div>

        <h1
          class="text-dark mb-4 text-7xl font-extrabold text-yellow-500 dark:text-yellow-400 lg:text-9xl"
        >
        </h1>
        <p
          id="subtitle"
          class="mb-4 text-balance text-3xl font-bold tracking-tight text-neutral-700 dark:text-neutral-300 md:text-4xl"
        >
          {subTitle}
        </p>
        <p
          id="content"
          class="mb-4 text-pretty text-lg text-neutral-600 dark:text-neutral-400"
        >
          {content}
        </p>
        <!-- Display a button that navigates user back to the previous page -->
        <Btn404 title={btnTitle} id="go-back" />
      </div>
    </div>
  </section>
</MainLayout>

<!-- JavaScript code to handle going back to the previous page -->
<script>
  const goBackButton = document.getElementById("go-back");

  if (goBackButton) {
    goBackButton.addEventListener("click", () => {
      history.back();
    });
  }
</script>
